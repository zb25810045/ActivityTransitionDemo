<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_mdtarge"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bloodcrown.translationanimationtest.transition.ExplodeTransitionActivity">

    <TextView
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="这里是测试标题"
        android:textSize="26sp"/>

    <RelativeLayout
        android:id="@+id/view_shade"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/view_title"
        android:background="@color/colorAccent"
        android:transitionName="shade">

        <ImageView
            android:id="@+id/view_iamge"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            android:transitionName="image"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_shade"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical|left"
        android:text="AAPT"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/view_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|left"
        android:text="AAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPTAAPT"
        android:textColor="@color/colorAccent"
        android:textSize="28sp"
        android:transitionName="name"/>

</RelativeLayout>
